# Production Environment Configuration
ENVIRONMENT=production
APP_PORT=8501
DEBUG=false

# Database Configuration (Production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agricultural_monitoring
POSTGRES_USER=agri_user
# POSTGRES_PASSWORD should be set via secrets management

# InfluxDB Configuration (Production)
INFLUX_HOST=influxdb
INFLUX_PORT=8086
INFLUX_USERNAME=admin
# INFLUX_PASSWORD should be set via secrets management
INFLUX_ORG=agricultural_monitoring
INFLUX_BUCKET=sensor_data

# Redis Configuration (Production)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD should be set via secrets management

# AI Model Configuration (Production)
MODEL_PATH=/app/models
MODEL_RETRAIN_INTERVAL=7  # days
MODEL_PERFORMANCE_THRESHOLD=0.85

# Data Processing Configuration (Production)
MAX_WORKERS=8
BATCH_SIZE=1000
TILE_SIZE=1024
MEMORY_LIMIT_GB=16

# Logging Configuration (Production)
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30  # seconds

# File Storage Configuration (Production)
DATA_STORAGE_PATH=/app/data
BACKUP_STORAGE_PATH=/app/backups
MAX_STORAGE_GB=500

# Security Configuration (Production)
# All sensitive values should be set via secrets management
SESSION_TIMEOUT=1800  # 30 minutes
FORCE_HTTPS=true
SECURE_COOKIES=true