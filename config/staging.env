# Staging Environment Configuration
ENVIRONMENT=staging
APP_PORT=8501
DEBUG=false

# Database Configuration (Staging)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agricultural_monitoring_staging
POSTGRES_USER=staging_user
# POSTGRES_PASSWORD should be set via secrets management

# InfluxDB Configuration (Staging)
INFLUX_HOST=influxdb
INFLUX_PORT=8086
INFLUX_USERNAME=staging_admin
# INFLUX_PASSWORD should be set via secrets management
INFLUX_ORG=agricultural_monitoring_staging
INFLUX_BUCKET=sensor_data_staging

# Redis Configuration (Staging)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD should be set via secrets management

# AI Model Configuration (Staging)
MODEL_PATH=/app/models
MODEL_RETRAIN_INTERVAL=3  # days (more frequent than production)
MODEL_PERFORMANCE_THRESHOLD=0.80

# Data Processing Configuration (Staging)
MAX_WORKERS=4
BATCH_SIZE=500
TILE_SIZE=1024
MEMORY_LIMIT_GB=8

# Logging Configuration (Staging)
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=20  # seconds

# File Storage Configuration (Staging)
DATA_STORAGE_PATH=/app/data
BACKUP_STORAGE_PATH=/app/backups
MAX_STORAGE_GB=100

# Security Configuration (Staging)
SESSION_TIMEOUT=1800  # 30 minutes
FORCE_HTTPS=false  # Can be disabled for staging
SECURE_COOKIES=false

# Alert Configuration (Staging)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP credentials should be set via secrets management
ALERT_FROM_EMAIL=staging-alerts@yourcompany.com

# External API Configuration (Staging)
# API keys should be set via secrets management